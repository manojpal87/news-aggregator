pipeline {
    agent any

    environment {
        APP_NAME = "news-aggregator-plateform"
    }

    stages {
    
		        stage ('Build Artifact') {
		            steps {
		                sh './gradlew clean build'
		            }
		        }
		        
		        stage ('Security Gates') {
		           echo 'checkmarks, owsap scan'
		        }
		        
		        stage ('Publish Artifacts') {
		           echo 'publish artifacts in repository'
		        }
		        
		         stage ('Deployments') {
		           echo 'do the deployment'
		        }
        
           }
}